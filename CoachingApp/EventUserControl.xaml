<UserControl x:Class="CoachingApp.EventUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoachingApp"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="263">
    <Grid Margin="16,0">
        <Button x:Name = "EventButton" Background="#FFFF5959" Content="Event 1" FontSize="20" Margin="0,-0.021,0,0.02" Height="35" MouseDoubleClick="EventButton_MouseDoubleClick" RenderTransformOrigin="0.5,0.5" d:LayoutOverrides="LeftMargin, RightMargin" FontFamily="Segoe UI Semibold" BorderBrush="#FF9E9D9D">
            <Button.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="2"/>
            </Button.Effect>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.072"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.165"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</UserControl>
