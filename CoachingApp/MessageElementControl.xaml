<UserControl x:Class="CoachingApp.MessageElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoachingApp"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1708">
    <Grid>
        <Grid x:Name="MessageElement" Margin="0" Height="100">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="48" Text="Suzie Z." VerticalAlignment="Center" Margin="100,0,0,0" Width="1608"/>
            <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Source="stockCoachPhoto.jpg"/>
            <Button Content="Button" Background="Black" BorderBrush="Black" Foreground="Black" Opacity="0" MouseLeftButtonDown="gotoDMButton" OpacityMask="Black"/>
        </Grid>

    </Grid>
</UserControl>
