<UserControl x:Class="CoachingApp.PlannerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoachingApp"
             mc:Ignorable="d" d:DesignWidth="300" Width="1912.8" Height="967">
    <Grid x:Name="PlannerControlGrid" Width="1912.8" Background="White" Margin="0,13,0,10">
        <Rectangle x:Name="HeaderShape" Height="104.4" Stroke="Black" VerticalAlignment="Top" Fill="#FFAEAEB0" StrokeThickness="0"/>
        <Label x:Name="TitleLabel" Content="Title" Height="93.2" VerticalAlignment="Top" FontSize="48" Margin="18.104,14.8,-18.104,0" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.569"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.773"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="TitleTextBox" Height="68.6" Margin="10,17.467,172.8,0" TextWrapping="Wrap" Text="Title&#xA;" VerticalAlignment="Top" FontSize="48" Visibility="Hidden"/>
        <TextBox x:Name="NewsTextBlock" TextWrapping="Wrap" Text="Text" FontSize="24" IsEnabled="False" RenderTransformOrigin="0.507,0.494" Margin="28,151,638.5,239" />
        <ScrollViewer x:Name="NewsScrollViewTextBox" Margin="0,104.4,0,0" Visibility="Hidden">
            <TextBox x:Name="NewsTextBox" TextWrapping="Wrap" Text="TextBox" RenderTransformOrigin="0.5,0.5" Width="1842.8" Height="439.6" FontSize="24" d:LayoutOverrides="Width, Height">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0.279"/>
                        <RotateTransform/>
                        <TranslateTransform X="-0.795"/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
        </ScrollViewer>
        <Button x:Name="EditButton" Content="Edit" HorizontalAlignment="Right" Height="68.6" Margin="0,17.467,24.933,0" VerticalAlignment="Top" Width="124.8" FontSize="36" Click="EditButton_Click"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Right" Height="68.6" Margin="0,17.467,24.933,0" VerticalAlignment="Top" Width="124.8" FontSize="36" Visibility="Hidden" Click="SaveButton_Click"/>
        <Rectangle x:Name="HeaderShape_Comment" Fill="#FF42849C" Height="86" Margin="0,0,0,105" Stroke="Black" StrokeThickness="0" VerticalAlignment="Bottom"/>
        <TextBox x:Name="CommentTextBox" Height="46" Margin="28,0,236.8,126" TextWrapping="Wrap" Text="Say something..." VerticalAlignment="Bottom" FontSize="30" FontStyle="Italic"/>
        <Button x:Name="PostComment" Content="Comment&#xA;" HorizontalAlignment="Right" Height="46" Margin="0,0,24.933,124.84" VerticalAlignment="Bottom" Width="161.867" FontSize="28" Click="PostComment_Click"/>
        <ScrollViewer x:Name="CommentScroll" Height="105" VerticalAlignment="Bottom">
            <UniformGrid x:Name="CommentSection" Height="Auto" Background="#FFE0E0E0" Columns="1" Width="1912.8"/>
        </ScrollViewer>
        <Rectangle x:Name="Separator" Fill="Black" Height="5.5" Margin="0,0,0,-5.5" Stroke="Black" StrokeThickness="0" VerticalAlignment="Bottom"/>
        <Rectangle x:Name="PlanPhoto" Fill="#FFEEEEEE" HorizontalAlignment="Right" Margin="0,151,24.933,239" Stroke="Black" StrokeThickness="0" Width="575.867"/>
        <Button x:Name="ChangePhotoButton" Content="Upload New Photo" HorizontalAlignment="Right" Height="66" Margin="0,377,172.8,0" VerticalAlignment="Top" Width="244" FontSize="24" Visibility="Hidden" Click="ChangePhotoButton_Click"/>

    </Grid>
</UserControl>
