<UserControl x:Class="WpfApp1.photoTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid Width="100" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Background="#FF0069FF" Margin="0,0,-100,-100">
            <Image HorizontalAlignment="Left" Height="84" VerticalAlignment="Top" Width="100"/>
            <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="Photo Title" VerticalAlignment="Bottom" Width="100" TextAlignment="Right"/>
        </Grid>

    </Grid>
</UserControl>
